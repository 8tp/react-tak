{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "module": "es2022",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "target": "es2022",
        "lib": ["es2022", "dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "cli.ts",
        "index.ts", 
        "test/**/*.ts",
        "lib/**/*.ts",
        "lib/schema.json",
        "types/**/*.d.ts"
    ]
}
